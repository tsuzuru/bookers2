<div class="container">

<h2>User info</h2>

<%= form_with model:@user, local:true do |f| %>

  <% if @user.errors.any? %>
   <p><strong>error:</strong>can't be blank or is too short (minimum is 2 characters)</p>
  <% end %>

      <div class="form-group">
        <h6>Name</h6>
        <%= f.text_field :name %>
      </div>
        <h6>Image</h6>
        <label for="inputImage"></label>
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
      <div class="form-group">
        <h6>Introduction</h6>
        <%= f.text_area :introduction %>
      </div>
        <%= f.submit 'Update User' %>
      <% end %>
  </div>
