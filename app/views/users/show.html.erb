<div class="container">
  <div class="row">
    <div class="col-md-3">

<h2>User info</h2>
   <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
   <table class = "table">
     <tr>
       <th>name</th>
       <th><%= @user.name %></th>
     </tr>
     <tr>
       <th>introduction</th>
       <th><%= @user.introduction%></th>
     </tr>
   </table>


    <%= link_to edit_user_path(@user.id) do %></p>
     <button type="button" class="btn btn-outline-secondary btn-block btn-sm"><i class="fas fa-user-cog"></i></button>
    <% end %>

<h2>New book</h2>
<%= form_with model:@book, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_field :body %>

  <br><%= f.submit "Create Book" %></br>

<% end %>

</div>

<div class="col-md-8 offset-md-1">

  <h2>Books</h2>
<table class="table">
  <thead>
    <tr>
      <th>image</th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
    <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= link_to attachment_image_tag(book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg") %></td>
      <td><%= link_to book.title, book_path(book)%></td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </tbody>
</table>
    </div>
  </div>
</div>