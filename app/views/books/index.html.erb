<div class="container">
  <div class="row">
    <div class="col-md-4">

<h2>User info</h2>
   <%= attachment_image_tag current_user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
   <table class = "table">
     <tr>
       <th>name</th>
       <th><%= current_user.name %></th>
     </tr>
     <tr>
       <th>introduction</th>
       <th><%= current_user.introduction%></th>
     </tr>
   </table>


    <%= link_to edit_user_path(current_user.id) do %></p>
     <button type="button" class="btn btn-outline-secondary btn-block btn-sm"><i class="fas fa-user-cog"></i></button>
    <% end %>

<h2>New book</h2>
<%= form_with model:@book, url:"/books", local:true do |f| %>

  <% if @book.errors.any? %>
   <p><strong>error:</strong>can't be blank</p>
  <% end %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <br><%= f.submit "Create Book" %></br>

<% end %>
  
</div>

<div class="col-md-8">
  
  <h2>Books</h2>
<table class="table">
  <thead>
    <tr>
      <th>image</th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
    <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></td>
      <td><%=link_to book.title, book_path(book)%></td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </tbody>
</table>
    </div>
  </div>
</div>