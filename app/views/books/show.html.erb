<div class="container">
  <div class="row">
    <div class="col-md-3">

<h2>User info</h2>
   <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
   <table class = "table">
     <tr>
       <th>name</th>
       <th><%= @user.name %></th>
     </tr>
     <tr>
       <th>introduction</th>
       <th><%= @user.introduction%></th>
     </tr>
   </table>


    <%= link_to edit_user_path(@user.id) do %></p>
     <button type="button" class="btn btn-outline-secondary btn-block btn-sm"><i class="fas fa-user-cog"></i></button>
    <% end %>

<h2>New book</h2>
<%= form_with model:@book_new, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_field :body %>

  <br><%= f.submit "Create Book" %></br>

<% end %>

</div>

<div class="col-md-8 offset-md-1">

<h2>Book detail</h2>
      <table class="table table-hover table-inverse">
        <tr>
          <td>
            <%= attachment_image_tag @user, :profile_image, size:"40x40", fallback: "no_image.jpg" %><br/>
            <%= link_to @user.name, user_path(@user.id) %>
          </td>
          <td><%= link_to @book.title, book_path(@book.id) %></td>
          <td><%= @book.body %></td>

          <td>
            <p class="favorite_<%=@book.id%>">
              <%= render partial:"favorites/favorite-btn",locals:{book: @book}%>
            </p>
          </td>

          <td>
            <p>コメント数:<%= @book_favorite.book_comments.count%></p>
          </td>

          <% if @book.user == current_user %>
            <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
          <% end %>
          <% if @book.user == current_user %>
            <td><%= link_to "Destroy", book_path(@book), method: :delete %></td>
          <% end %>
        </tr>
      </table>

      <% @book_favorite.book_comments.each do |book_comment|%>
        <%=link_to user_path(book_comment.user_id) do%>
          <%= attachment_image_tag book_comment.user,:profile_image,size:"40x40",fallback:"no_image.jpg"%>
        <%end%>
        <%= book_comment.comment%>
        <% if current_user.id == book_comment.user_id %>
          <%= link_to "Destroy",book_book_comment_path(book_comment.book_id,book_comment),method: :delete%>
        <%end%>
        <%=link_to user_path(book_comment.user_id) do%>
          <br><%= book_comment.user.name%></br>
        <%end%>
      <%end%>

      <%= form_with(model:[@book_favorite, @book_comment], local: true) do |f| %>
        <div class="form-group">
          <%= f.label :Comment %>
          <%= f.text_area :comment, :size => "90×10", class: "form-control" %>
        </div>
        <%= f.submit "送信" %>
      <% end %>



    </div>
  </div>
</div>