<div class="container">

      <h2>Editing Book</h2>

      <%= form_with model:@book, local:true do |f| %>

      <% if @book.errors.any? %>
        <p><strong>error:</strong>can't be blank</p>
      <% end %>

        <div class="form-group">
          <h6>Title</h6>
          <%= f.text_field :title %>
        </div>
        <div class="form-group">
        <h6>Opinion<h6>
        <%= f.text_area :body %>
        </div>
        <div class="form-group">
          <%= f.submit 'Update Book' , class: "btn btn-success"  %>
        </div>
      <% end %>

      <%= link_to 'Show', book_path(@book.id) %>
      <%= link_to 'Back', books_path %>

</div>